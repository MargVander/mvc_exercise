<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Items</h1>

		<h3>Emails</h3>
		<% @users.each do |user| %>
		  <%= link_to administration_profile_path(user.profile.id) do %>
			  <p><%= user.email %></p>
		  <% end %>
		<% end %>

		<div class="row">
			<div class="col-12">
				<div class="card">
					<% @categories.each do |category| %>
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<h1><%= category.name %></h1>
								<p><%= category.description %>
								<tr>
									<th>Prix de départ</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% category.items.each do |item| %>
									<%= render partial: "administration/items/table_row", locals: {item: item} %>
								<% end %>
							</tbody>
						</table>
					</div>
					<% end %>

				</div>
				<h4>Prix moyen : <%= Item.average_price.round(2) %>€</h4>

			</div>
		</div>

	</div>
</main>
